<div class="container">
    <div class="row">
        <div class="col-lg-12" style="padding: 2%;">
            <form class="form-inline" ng-submit="getPlayerData()">
                Name :&nbsp; <input class="form-control" type="text" ng-model="player.name" placeholder="Search Player">
                <button class="btn btn-success">submit</button>
            </form>
            <br>
            <p ng-if="res"><b>Number Of attempts so far : </b><b ng-model="res.attempts">{{attempts}}</b></p>
        </div>
        <div class="col-lg-6 h-scroll" ng-if="res">
            <p><b>All answers of </b><b ng-bind="player.name">{{name}}</b></p>
            <table class="table table-striped table-hover">
                <thead class="thead-default">
                    <tr>
                        <th>#</th>
                        <th>Qno</th>
                        <th>Time</th>
                        <th>Staus</th>
                        <th>Answer</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="data in res">
                        <th>{{$index+1}}</th>
                        <td>{{data.qno}}</td>
                        <td>{{data.time |  date:'yyyy-MM-dd HH:mm:ss' }}</td>
                        <td>{{data.correct}}</td>
                        <td>{{data.answer}}</td>
                    </tr>
                </tbody>
            </table>
        </div><br><br>
        <div class="col-lg-6 h-scroll">
            <p><b>Top 20 Players</b></p>
            <table class="table table-striped table-hover" ng-init="getPlayers()">
                <thead class="thead-default">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Score</th>
                    <th>College</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="data in topPlayers">
                    <th>{{$index+1}}</th>
                    <td>{{data.name}}</td>
                    <td>{{data.score}}</td>
                    <td>{{data.organisation}}</td>
                </tr>
                </tbody>
            </table>
        </div>
        <div id="container" style="width:100%; height: auto; margin: 0 auto" ng-init="getGraph()"></div>
    </div>
</div>