<!--Template CSS-->
<link rel="stylesheet" href="assets/css/forgotTemplate.css">
<div class="container">
    <div class="row vertical-placing">
        <div class="text-center col-lg-12 mx-auto vertical-center">
            <h1>FORGOT PASSWORD</h1>
            <form class="horizontal-center form-group col-lg-5 col-sm-12 col-md-auto" ng-submit="forgotEmailGen()" align="center">
                <input type="text" class="form-control" placeholder="Enter your email ID"  required="true" ng-model="player.email">
                <br>
                <!--Message Container for users confort-->
                <div class="message-container">
                    <div class="alert alert-danger" role="alert" ng-if="code==1">
                        <div class="font-weight-strong centered" ng-model="msg">
                            <font size="2" class="font-weight-bold">{{msg}}</font>
                        </div>
                    </div>
                    <div class="alert alert-success" role="alert" ng-if="code==0">
                        <div class="font-weight-strong centered" ng-model="msg">
                            <font size="2" class="font-weight-bold">{{msg}}</font>
                        </div>
                    </div>
                    <div class="alert alert-info" role="alert" ng-if="code==2">
                        <div class="font-weight-strong centered" ng-model="msg">
                            <font size="2" class="font-weight-bold">{{msg}}</font>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn">
                    <span id="btn-text">SUBMIT</span>
                    <span class="spinner" data-loader>
                        <i class="fa fa-circle-o-notch fa-spin fa-1x fa-fw" aria-hidden="true"></i>
                    </span>
                </button>
            </form>
            <a href="/"><button type="btn" class="btn"><i class="fa fa-chevron-circle-left"></i>BACK</button></a>
        </div>
    </div>
</div>
<script>
    $('#modal').modal('hide');
</script>
